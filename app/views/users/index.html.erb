  <div class="container px-5 px-sm-0">
    <div class="row">
      <%= render 'users/user_info', user: @user %>
       <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <% if user.profile_image.attached? %>
              <td><%= image_tag user.profile_image,class: "attachment user profile_image fallback", size: "50x50" %></td>
              <% else %>
              <td><%= image_tag 'no_image',class: "attachment user profile_image fallback", size: "40x40"  %></td>
              <% end %>
              <td><%=user.name %></td>
              <td><%=link_to 'Show', user_path(user.id) %></td>
            </tr>
          </tbody>
        <% end %>
        </table>
      </div>
    </div>
  </div>